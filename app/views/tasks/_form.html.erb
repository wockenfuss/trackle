<div class="resourceColumn resourceFormDrawer">
	<%= form_for @task, :remote => true do |f| %>
		<div id="taskErrors"></div>

		<div>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div>
			<%= f.label :color %>
			<%= f.text_field :color, :class => "colorPicker" %>
		</div>
		<div class="formSelect">
			<%= f.label :task_group %>
			<%= f.collection_select 'task_group_ids', TaskGroup.all, :id, :name, { :include_blank => ""} %>
		</div>	
			
		<%= f.submit %>
		<%= f.submit :Cancel if !@task.new_record? %>	

	<% end %>
</div>