<% if @user.assigned? %>

	<h3><%= "Current Task:" %></h3>
	<div id="currentTask">
		<%= render :partial => 'assignments/current_task', :locals => { :assignment => @assignment }  %>
	</div>
	
	<% if !@on_hold.blank? %>
		<h3>On Hold: </h3>
		<ul>
			<% @on_hold.each do |item| %>
				<li>
					<%= "#{item.task.name}: #{item.city.name}" %></br>
					<%= hold_resume(item) %>
				</li> 
			<% end %>
		</ul>
	<% end %>

	<!-- queued -->
	<% if !@queue.blank? %>
	<h3>Queue:</h3>
	<ul>
		<% @queue.each do |item| %>
			<li><%= "#{item.task.name}: #{item.city.name}" %></li>
		<% end %>
	</ul>
	<% end %>

<% else %>
	<p>You currently have no assignments</p>
	<!-- <#%= link_to "Get new assignment (not active yet)", "#", :remote => true %>	 -->
<% end %>

