<% if @assignment %>
	<p><%= "Assigning #{@assignment.task.name} to #{@assignment.user.name} for #{@assignment.city.name}"%></p>

	<%= form_for @assignment, :remote => true do |f| %>
	<div>
		<%= f.label :duration %>
		<%= f.text_field :duration %>
	</div>
	<div>
		<%= f.label :deadline %>
		<%= f.text_field :deadline, :class => "datepicker" %>
	</div>

	<div>
		<%= f.fields_for :comments do |builder| %>
	    <%= render "comments/form", :f => builder %>
	  <% end %>
			
	</div>

	<div>
		<%= f.submit "Assign task" %>
	</div>

	<%= f.hidden_field :user_id %>
	<%= f.hidden_field :task_id %>
	<%= f.hidden_field :city_id %>

	<% end %>
<% end %>