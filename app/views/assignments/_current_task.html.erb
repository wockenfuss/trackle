<ul>
	<li><strong><%= "#{assignment.task.name}: #{assignment.city.name}" %></strong></li>
	<li><em><%= assignment.status %></em></li>
	<li><%= "Deadline: #{parse_time(assignment.deadline)}" if assignment.deadline %></li>
	<li><%= "Scheduled Duration: #{@user.current_assignment.duration} hours" if assignment.duration %></li>

	<% if assignment.comments.count > 0 %>
		<li class="comment">
			<%= "\"#{assignment.comments.first.content}\""  %>
		</br>
			<%= "- from #{assignment.comments.first.user.name}." %>	
		</li>
	<% end %>


	<div id="statusLink">
		<%= render 'assignments/status_link' %>	
	</div>
</ul>