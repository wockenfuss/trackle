<%= form_for @announcement, :remote => true do |f| %>
	<div class="announcementFields">
		<%= f.text_field :subject %>
		<%= f.label :subject %>
		<%= f.text_field :begin_date, :class => "datepicker" %>
		<%= f.label :begin_date %>
		<%= f.text_field :end_date, :class => "datepicker" %>
		<%= f.label :end_date %>
	</div>
	<div>
		<%= f.text_area :content %>
		<%= f.label :content %>
	</div>	

		<!-- <#%= f.hidden_field :user_id, :value => current_user.id %> -->
		<%= f.submit %>
		
<% end %>