<div class="resourceColumn">
	<% if @task_groups.any? %>
		<% @task_groups.each do |task_group| %>
		<ul>
			<li>
				<%= task_group.name %> |
				<%= link_to "edit", edit_task_group_path(task_group) %> |	
				<%= link_to "delete", task_group_path(task_group), :method => :delete, :remote => true, :confirm => "Are you sure you want to delete this task group?" %>
			</li>
		</ul>
		<% end %>
	<% else %>
		<p><%= "No task groups yet." %></p>
	<% end %>
</div>