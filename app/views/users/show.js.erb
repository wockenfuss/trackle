var target = $('.userBox')['<%= @location %>'];
var $currentBox = $('.userBox[data-user=' + '<%= @user.id %>' + ']');
if ( $('#userDisplay').is(':visible') ) {
	hideAssignments();
} else {
	showAssignments();
}

function hideAssignments() {
	$('#userDisplay').slideToggle('default', function() {
    $('#userDisplay').remove();
    $('.userBox').removeClass('unselected');
  });
}

function showAssignments() {
	$('.userBox').not($currentBox).addClass('unselected');
	$(target).before('<%= j render :partial => "users/show", :locals => { :user => @user } %>');	
	myApp.addAssignmentListeners();
}