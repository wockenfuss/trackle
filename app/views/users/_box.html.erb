<%= content_tag "div", :class => user.assigned? ? "userBox droppable occupied" : "userBox droppable available", 'data-user' => user.id, 'data-color' => user.current_city_color, 'data-taskColor' => user.task_color, :data => {:userInfo => user} do %>

<!-- <div class="<#%= user.assigned? ? "userBox droppable occupied" : "userBox droppable available" %>" data-user="<%= user.id %>" data-color="<%= user.current_city_color %>" data-taskColor="<%= user.task_color%>"> -->
	<div class="userName" >
		<p><%= user.name %></p>
	</div>
	<% if user.assigned?%>

		<div class="cityStripe">
			<p><%= user.city_name %></p>
		</div>

		<div class="assignments">
			<p><%= user.current_assignment.task.name %></p>
			<p>
				<em>
					<%= status_bar(user) %>
				</em>
			</p>
		</div>	
	<% end %>

<% end %>

	
