<div class="resourceColumn resourceFormDrawer">
	<%= form_for @project, :remote => true do |f| %>
	<div id="projectErrors"></div>

	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :deadline %>
		<%= f.text_field :deadline, :class => "datepicker" %>
	</div>	
	<div>
		<%= f.label :color %>
		<%= f.text_field :color, :class => "colorPicker" %>
	</div>	
		
		<%= f.submit %>
		<%= f.submit :Cancel if !@project.new_record? %>	

	<% end %>
</div>
	