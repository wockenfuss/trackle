<div class="dropdown cityName" data-color="<%= @city.color if @city %>">
	<%= link_to @city.name, "#" if @city %>
	<ul class="dropdownMenu">
		<% @cities.each do |city| %>
			<li data-color="<%= city.color %>" class="dropdownProject" data-city="<%= city.id %>">
				<%= city.name %>
			</li>
		<% end %>
	</ul>
</div>

<% if @tasks.any? %>
<div>
	<% @tasks.each do |task| %>
	<%= render :partial => 'tasks/show', :locals => { :task => task, :city => @city } %>
	<% end %>
</div>
<% end %>